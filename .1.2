	NumberOfCells(r, L);//считаем слои
	ContactSurf(r, A);
	probability(LambdB, LambdF, LambdS, r, L, A);
	//основной цикл
	for (int i = 0; i < max_step; i++) {
		//инициализируем начальными значениями
		for (int j = 0; j < r; j++)
			Gp[j] = Gw[j] = Up[j] = Uw[j] = phiDer[j] = 0;

		for (int j = 1; j < r - 1; j++) {
			Gp[j] = exp(-Up[j]);
			Gw[j] = exp(-Uw[j]);
		}
		for (int j = 1; j < r - 1; j++) {
			Gb[j][Ns + 1][g] = Gp[j];
		}
		Gf[1][1][1] = 1;
		//матрицы пропогаторов
		//расписываем для Gb
		for (int k = g; k > 1; k--) {
			for (int rt = 1; rt < r - 1; rt++) {// точка ветвления для Gb
				Gb[rt][Ns + 1][g + 1 - k] = pow(Gb[rt][1][g + 1 - k], db - 1) / pow(Gp[rt], db - 2);
			}
			//от чего s
			for (int st = Ns + 1; st > 1; st--) {
				for (int rt = 1; rt < r - 1; rt++) {
					Gb[rt][Ns + 1 - st + 1][g + 1 - k] = Gp[rt] * (LambdB[rt] * Gb[rt - 1][Ns + 1 - st + 2][g + 1 - k] + LambdS[rt] * Gb[rt][Ns + 1 - st + 2][g + 1 - k] + LambdF[rt] * Gb[rt + 1][Ns + 1 - st + 2][g + 1 - k]);
				}
			}
		}
		//расписываем для Gf
		for (int k = g; k > 1; k--) {
			for (int rt = 1; rt < r - 1; rt++) {// точка ветвления для Gb
				Gf[rt][1][k] = Gf[rt][Ns + 1][k - 1] * pow(Gb[rt][1][k], db - 2) / pow(Gp[rt], db - 2);
			}
			for (int st = Ns + 1; st > 1; st--) {
				for (int rt = 1; rt < r - 1; rt++) {
					Gf[rt][st][k] = Gp[rt] * (LambdB[rt] * Gf[rt - 1][st - 1][k] + LambdS[rt] * Gf[rt][st - 1][k] + LambdF[rt] * Gf[rt + 1][st - 1][k]);
				}
			}
		}
		//профиль плотности
		temp1 = temp2 = 0;
		for (int rt = 1; rt < r - 1; rt++) {
			for (int st = 1; st < Ns + 1; st++) {
				temp1+=Gf[rt][st][1] * Gb[rt][st][1] / Gp[rt];
			}
			for (int kt = 2; kt < g+1; kt++) { // g or g+1 ?
				for (int st = 1; st < Ns + 1; st++) {
					temp2+= pow((db-1),k-1)*Gf[rt][st][kt] * Gb[rt][st][kt] / Gp[rt];
				}
			}
			phiDer[rt] += temp1 + temp2;
		}
		//ищем стат.сумму
		temp1 = 0;
		for (int rt = 1; rt < r - 1; rt++) {
			temp1+=1/N*(phiDer[rt]*)
		}
	}



}



