	vector<double>Up(r);
	vector<double>Uw(r);
	vector<double>Gp(r);
	vector<double>Gw(r);
	vector<double>phi(r);
	vector<double>phiDer(r);
	vector<vector<vector<double>>>Gb(r, vector<vector<double>>(Ns + 2, vector<double>(g + 1)));
