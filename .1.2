	infile >> Ns >> g >> db >> M >> speed >> tolerance >> max_step >> choise;//нач. парамертры
	infile.close();
	if (db > 2)
		N = Ns*pow((db - 1), g - 1) / (db - 2) + 1;
	else
		N = Ns*g + 1;
	r = M + 2; s = N; k = g;
